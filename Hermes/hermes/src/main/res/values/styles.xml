<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Hermes" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#0097A7</item>
        <item name="colorPrimaryDark">#00838F</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="HermesNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#0097A7</item>
        <item name="colorPrimaryDark">#00838F</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Preferences" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#0097A7</item>
        <item name="colorPrimaryDark">#00838F</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Widget.Hermes.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="theme">@style/ThemeOverlay.Hermes.Toolbar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ThemeOverlay.Hermes.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/md_white_1000</item>
    </style>
    <style name="HermesDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">#4baeae</item>
        <item name="colorPrimaryDark">#4baeae</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
